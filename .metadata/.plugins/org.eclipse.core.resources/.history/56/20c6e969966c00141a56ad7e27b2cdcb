package com.UndefinedParameter.app.core;

import io.dropwizard.views.View;

public class HomeView extends View{

	private final NewsArticle news;
	
	public HomeView(NewsArticle news) {
		super("home.ftl");
		this.news = news;
		news.setId(0);
		news.setHeadline("Welcome to QuizZing");
		news.setBody("This site is under construction - more to come");
	}
	
	public NewsArticle getNews() {
		return news;
	}
}
